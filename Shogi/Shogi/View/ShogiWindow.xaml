<Window x:Class="Shogi.View.ShogiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shogi.View"
        xmlns:vm="clr-namespace:Shogi.ViewModel"
        mc:Ignorable="d"
        Title="ShogiWindow" Height="450" Width="800">

    <Window.DataContext>
        <vm:ShogiViewModel/>
    </Window.DataContext>

    <Window.Background>
        <ImageBrush ImageSource="/Shogi;component/Resources/Background.jpg"/>
    </Window.Background>

    <Grid>
        <Viewbox Stretch="Uniform">
            <local:ShogiBoard/>
        </Viewbox>
    </Grid>
</Window>
